# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
# Connection pool settings: connection_limit=10, pool_timeout=20s
DATABASE_URL="postgresql://username:password@localhost:5432/hexascan?schema=public&connection_limit=10&pool_timeout=20"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security (Generate secure random strings for production)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
ENCRYPTION_SECRET=your-super-secret-encryption-key-min-32-chars

# CORS (comma-separated list of allowed origins)
# For production, add: https://hexascan.hyperbig.com
# Example: CORS_ORIGIN=http://localhost:5173,https://hexascan.hyperbig.com
CORS_ORIGIN=http://localhost:5173

# Frontend URL for notification links (e.g., Telegram "View Dashboard" links)
# If not set, falls back to first CORS origin
# For production: FRONTEND_URL=https://hexascan.hyperbig.com
FRONTEND_URL=

# Rate Limiting
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_AUTH=10
RATE_LIMIT_API=100

# External API Keys (optional)
# Google PageSpeed Insights API - works without key but has lower rate limits
# Get your key from: https://developers.google.com/speed/docs/insights/v5/get-started
GOOGLE_PAGESPEED_API_KEY=

# Super Admin (user with this email gets SUPER_ADMIN role on login)
SUPER_ADMIN_EMAIL=

# Stripe (for plan payments)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# SMTP Settings for Email Notifications
# Configure these to enable email notification channels
# Common providers:
#   Gmail: smtp.gmail.com, port 587, use App Password
#   Outlook: smtp.office365.com, port 587
#   AWS SES: email-smtp.{region}.amazonaws.com, port 587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SECURE=false
SMTP_FROM_ADDRESS=alerts@yourdomain.com
SMTP_FROM_NAME=HexaScan
