{
  "name": "@hexascan/backend",
  "version": "1.0.0",
  "description": "HexaScan Backend API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx src/core/database/prisma/seed.ts",
    "db:studio": "prisma studio",
    "secrets": "node scripts/generate-secrets.js",
    "clean": "rm -rf dist node_modules"
  },
  "prisma": {
    "seed": "tsx src/core/database/prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^10.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/static": "^9.0.0",
    "@fastify/websocket": "^11.0.1",
    "@playwright/test": "^1.58.0",
    "@prisma/client": "^6.1.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.28.2",
    "dotenv": "^16.4.5",
    "fastify": "^5.2.0",
    "ioredis": "^5.4.1",
    "nodemailer": "^7.0.13",
    "otplib": "^12.0.1",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "playwright": "^1.58.0",
    "stripe": "^20.3.1",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.10.5",
    "@types/nodemailer": "^7.0.9",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "prisma": "^6.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
